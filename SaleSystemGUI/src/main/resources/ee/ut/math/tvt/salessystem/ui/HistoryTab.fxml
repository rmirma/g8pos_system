<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<!-- TODO add eventhandlers to tags -->

<TitledPane alignment="CENTER" animated="false" collapsible="false" text="History" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <BorderPane>
        <!-- The history view/purchase history -->
        <center>
            <TableView fx:id="HistoryView" styleClass="blue_style" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn text="Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="date" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Time">
                        <cellValueFactory>
                            <PropertyValueFactory property="time" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Total">
                        <cellValueFactory>
                            <PropertyValueFactory property="total" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </center>
        <!-- The bottom pane, where all the shopping carts contents are shown-->
        <bottom>
            <TableView fx:id="ShoppingCartContentsView" styleClass="blue_style" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn text="Id">
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Price">
                        <cellValueFactory>
                            <PropertyValueFactory property="price" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Quantity">
                        <cellValueFactory>
                            <PropertyValueFactory property="quantity" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Sum">
                        <cellValueFactory>
                            <PropertyValueFactory property="sum" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </bottom>
        <!-- top pane for buttons and calendar-->
        <top>
            <HBox alignment="CENTER">
                <!-- buttons on right side -->
                <VBox alignment="CENTER_LEFT" prefHeight="78.0" prefWidth="253.0" spacing="5">
                    <Button prefWidth="150" text="Show all" />
                    <Button prefWidth="150" text="Show last 10" />
                    <Button prefWidth="150" text="Show between dates" />
                </VBox>
                <!-- date selectors -->
                <VBox alignment="CENTER_RIGHT" prefHeight="78.0" prefWidth="125.0" spacing="5">
               <DatePicker promptText="Start date" />
               <DatePicker layoutX="10.0" layoutY="40.0" promptText="end date" />
                </VBox>
            </HBox>
        </top>
    </BorderPane>
</TitledPane>
